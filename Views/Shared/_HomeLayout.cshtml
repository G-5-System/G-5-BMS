@{
    bool showSecondNavbar = ViewData["ShowSecondNavbar"] != null ? (bool)ViewData["ShowSecondNavbar"] : false;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - G_5_BMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/HomeLayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/G_5_BMS.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header-nav">
        <nav class="navbar navbar-expand-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Barangay Management System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">HOME</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Announcement">ANNOUNCEMENT</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Organization">OFFICIALS</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Feedback">FAQs</a></li>
                </ul>
            </div>
        </nav>
        @if (showSecondNavbar)
        {
            <nav class="navbar navbar-expand-sm Sec-navbar">
                <div class="container-fluid">
                    <div class="announcement-container">
                        <h1>@ViewData["Title"]</h1> 
                        <p>Barangay Management System</p>
                    </div>
                </div>
            </nav>
        }
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top text-muted">
        <div class="container-fluid d-flex justify-content-between align-items-center py-3">
            <div class="footer-left">
                &copy; 2024 - G_5_BMS
            </div>
            <div class="footer-right">
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="footer-link">Privacy</a>
                <span class="mx-2">|</span>
                <a asp-area="" asp-controller="Home" asp-action="Terms" class="footer-link">Terms of Service</a>
                <span class="mx-2">|</span>
                <a asp-area="" asp-controller="Home" asp-action="Contact" class="footer-link">Contact Us</a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/HomeLayout.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
