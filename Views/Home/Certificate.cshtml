@model G_5_BMS.Models.Certificate
@{
    ViewData["Title"] = "Certificate";
    ViewData["ShowSecondNavbar"] = true;
}
<link rel="stylesheet" href="~/css/Certificate.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/FModal.css" asp-append-version="true" />
<div class="container mt-3">
    <div class="custom-card">
        <div class="services-section">
            <hr class="divider">
            <span class="services-label">Applicant</span>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Certificate", "Home", FormMethod.Post, new { id = "Form" }))
            {
                <div class="row mb-3">
                    <div class="col">
                        @Html.LabelFor(m => m.FirstName)
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    </div>
                    <div class="col">
                        @Html.LabelFor(m => m.MiddleName)
                        @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control" })
                    </div>
                    <div class="col">
                        @Html.LabelFor(m => m.LastName)
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        @Html.LabelFor(m => m.Suffix)
                        @Html.DropDownListFor(m => m.Suffix, new SelectList(new List<string> { "Jr.", "Sr.", "I", "II" }), "Select Suffix", new { @class = "form-control" })
                    </div>
                    <div class="col">
                        @Html.LabelFor(m => m.Gender)
                        @Html.DropDownListFor(m => m.Gender, new SelectList(new List<string> { "Male", "Female", "Other" }), "Select Gender", new { @class = "form-control" })
                    </div>
                </div>

                <div class="services-section">
                    <hr class="divider">
                    <span class="services-label">Contact Information</span>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col">
                            @Html.LabelFor(m => m.Address)
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            @Html.LabelFor(m => m.ContactNumber)
                            @Html.TextBoxFor(m => m.ContactNumber, new { @class = "form-control" })
                        </div>
                        <div class="col">
                            @Html.LabelFor(m => m.EmailAddress)
                            @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", type = "email" })
                        </div>
                    </div>
                </div>

                <div class="services-section">
                    <hr class="divider">
                    <span class="services-label">Other Information</span>
                </div>

                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col">
                            @Html.LabelFor(m => m.Year)
                            @Html.TextBoxFor(m => m.Year, new { @class = "form-control" })
                        </div>
                        <div class="col">
                            @Html.LabelFor(m => m.Purpose)
                            @Html.TextBoxFor(m => m.Purpose, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div id="submissionModal" class="custom-modal" style="display:none;">
    <div class="modal-content">
        <span class="close" id="closeModal">&times;</span>
        <p id="modalMessage"></p>
    </div>
</div>
<script src="~/js/FormValidation.js" defer></script>