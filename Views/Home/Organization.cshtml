                            <h6 class="card-subtitle mb-2 text-muted">@Model.OrgChart1[7].Position</h6>
                            <p class="card-text">@Model.OrgChart1[7].Description</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="row">
                <div class="col-12 mb-4 d-flex justify-content-center">
                    <div class="card">
                        <img src="@Model.OrgChart2[0].ImageUrl" class="card-img-top" alt="@Model.OrgChart2[0].Name" />
