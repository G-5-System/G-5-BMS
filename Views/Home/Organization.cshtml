                                <h5 class="card-title">@Model.OrgChart2[i].Name</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@Model.OrgChart2[i].Position</h6>
                                <p class="card-text">@Model.OrgChart2[i].Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="row">
                <div class="col-12 mb-4 d-flex justify-content-center">
                    <div class="card">
                        <img src="@Model.OrgChart2[7].ImageUrl" class="card-img-top" alt="@Model.OrgChart2[7].Name" />
                        <div class="card-body">
                            <h5 class="card-title">@Model.OrgChart2[7].Name</h5>
