                            <p class="card-text">@Model.OrgChart2[0].Description</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                @for (int i = 1; i <= 6; i++)
                {
                    <div class="col-12 col-md-4 mb-4 d-flex justify-content-center">
                        <div class="card">
                            <img src="@Model.OrgChart2[i].ImageUrl" class="card-img-top" alt="@Model.OrgChart2[i].Name" />
