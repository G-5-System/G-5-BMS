@model G_5_BMS.Models.Clearance
@{
    ViewData["Title"] = "Clearance";
    ViewData["ShowSecondNavbar"] = true;
}
<link rel="stylesheet" href="~/css/Clearance.css" asp-append-version="true" />

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h4>Personal Information Form</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Submit", "YourControllerName", FormMethod.Post))
            {
                <div class="row mb-3">
                    <div class="col">
                        @Html.LabelFor(m => m.FirstName)
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    </div>
                    <div class="col">
                        @Html.LabelFor(m => m.MiddleName)
                        @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control" })
                    </div>
                    <div class="col">
                        @Html.LabelFor(m => m.LastName)
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        @Html.LabelFor(m => m.Suffix)
                        @Html.DropDownListFor(m => m.Suffix, new SelectList(new List<string> { "Jr.", "Sr.", "I", "II" }), "Select Suffix", new { @class = "form-control" })
                    </div>
                    <div class="col">
                        @Html.LabelFor(m => m.Gender)
                        @Html.DropDownListFor(m => m.Gender, new SelectList(new List<string> { "Male", "Female", "Other" }), "Select Gender", new { @class = "form-control" })
                    </div>
                    <div class="col">
                        @Html.LabelFor(m => m.CivilStatus)
                        @Html.DropDownListFor(m => m.CivilStatus, new SelectList(new List<string> { "Single", "Married", "Divorced", "Widowed" }), "Select Civil Status", new { @class = "form-control" })
                    </div>
                    <div class="col">
                        @Html.LabelFor(m => m.Citizenship)
                        @Html.DropDownListFor(m => m.Citizenship, new SelectList(new List<string> { "Filipino", "American", "Other" }), "Select Citizenship", new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        @Html.LabelFor(m => m.Birthday)
                        @Html.TextBoxFor(m => m.Birthday, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    </div>
                    <div class="col">
                        @Html.LabelFor(m => m.Age)
                        @Html.TextBoxFor(m => m.Age, new { @class = "form-control", type = "number", @min = "0" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        @Html.LabelFor(m => m.Address)
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        @Html.LabelFor(m => m.Province)
                        @Html.TextBoxFor(m => m.Province, new { @class = "form-control" })
                    </div>
                    <div class="col">
                        @Html.LabelFor(m => m.Municipality)
                        @Html.TextBoxFor(m => m.Municipality, new { @class = "form-control" })
                    </div>
                    <div class="col">
                        @Html.LabelFor(m => m.Barangay)
                        @Html.TextBoxFor(m => m.Barangay, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        @Html.LabelFor(m => m.ContactNumber)
                        @Html.TextBoxFor(m => m.ContactNumber, new { @class = "form-control" })
                    </div>
                    <div class="col">
                        @Html.LabelFor(m => m.EmailAddress)
                        @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", type = "email" })
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            }
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/Clearance.js" asp-append-version="true"></script>