@{
    ViewData["Title"] = "Admin Dashboard";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/Dashboard.css" asp-append-version="true" />
<link rel="stylesheet" href="~/G_5_BMS.styles.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

<div class="container mt-4">
    <h2>Dashboard Overview</h2>
    <div class="chart-container">
        <canvas id="applicationsChart"></canvas>
        <canvas id="inquiriesChart"></canvas>
        <canvas id="feedbacksChart"></canvas>
</div>
    <h3 class="mt-4">Recent Applications</h3>
    <table class="recent-applications">
        <thead>
            <tr>
                <th>Application ID</th>
                <th>User</th>
                <th>Status</th>
                <th>Email</th>
                <th>Date Submitted</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var application in Model)
            {
                <tr>
                    <td>@application.Id</td>
                    <td>@application.User</td>
                    <td>@application.Status</td>
                    <td>@application.Email</td>
                    <td>@application.DateSubmitted.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="~/js/Dashboard.js"></script>
