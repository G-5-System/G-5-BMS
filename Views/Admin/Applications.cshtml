@model G_5_BMS.Models.Application

@{
    ViewData["Title"] = "Applications";
}
<link rel="stylesheet" href="~/css/Application.css" asp-append-version="true" />

<div class="container mt-4">
    <div class="card">
        <div class="info-card-header">
            <h2>List of Applications</h2>
        </div>
        <div class="card-body">

            <!-- Clearances Section -->
            <div class="inner-card">
                <div class="table-like-header">Barangay Clearance</div>
                <div class="inner-card-body">
                    @foreach (var application in Model.Clearances)
                    {
                        <div class="table-like">
                            <div class="table-like-row">
                                <div class="green-circle"></div>
                                <div class="table-like-cell">Name: @application.FirstName @application.MiddleName @application.LastName</div>
                                <div class="table-like-cell">Contact Information: @application.ContactNumber</div>
                                <div class="table-like-cell">Email Address: @application.EmailAddress</div>
                                <div class="table-like-cell">
                                    <button class="btn btn-primary">Email</button>
                                    <button class="btn btn-danger">X</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Permits Section -->
            <div class="inner-card">
                <div class="table-like-header">Barangay Permit</div>
                <div class="inner-card-body">
                    @foreach (var application in Model.Permits)
                    {
                        <div class="table-like">
                            <div class="table-like-row">
                                <div class="green-circle"></div>
                                <div class="table-like-cell">Name: @application.FirstName @application.MiddleName @application.LastName</div>
                                <div class="table-like-cell">Contact Information: @application.ContactNumber</div>
                                <div class="table-like-cell">Email Address: @application.EmailAddress</div>
                                <div class="table-like-cell">
                                    <button class="btn btn-primary">Email</button>
                                    <button class="btn btn-danger">X</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- IDs Section -->
            <div class="inner-card">
                <div class="table-like-header">Barangay ID</div>
                <div class="inner-card-body">
                    @foreach (var application in Model.Ids)
                    {
                        <div class="table-like">
                            <div class="table-like-row">
                                <div class="green-circle"></div>
                                <div class="table-like-cell">Name: @application.FirstName @application.MiddleName @application.LastName</div>
                                <div class="table-like-cell">Contact Information: @application.ContactNumber</div>
                                <div class="table-like-cell">Email Address: @application.EmailAddress</div>
                                <div class="table-like-cell">
                                    <button class="btn btn-primary">Email</button>
                                    <button class="btn btn-danger">X</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Complaints Section -->
            <div class="inner-card">
                <div class="table-like-header">Complaints</div>
                <div class="inner-card-body">
                    @foreach (var application in Model.Complains)
                    {
                        <div class="table-like">
                            <div class="table-like-row">
                                <div class="green-circle"></div>
                                <div class="table-like-cell">Full Name: @application.FullName</div>
                                <div class="table-like-cell">Contact Number: @application.ContactNumber</div>
                                <div class="table-like-cell">Email Address: @application.EmailAddress</div>
                                <div class="table-like-cell">
                                    <button class="btn btn-primary">Email</button>
                                    <button class="btn btn-danger">X</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
